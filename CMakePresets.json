{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 30,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "cmake-build-${presetName}",
      "installDir": "cmake-install-${presetName}",
      "cacheVariables": {
        "CMAKE_COMPILE_WARNING_AS_ERROR" : "True"
      }
    },

    {
      "name": "gcc-base",
      "hidden": true,
      "inherits": "base",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_C_COMPILER" : "gcc",
        "CMAKE_CXX_COMPILER" : "g++"
      }
    },
    {
      "name": "gcc-static-debug",
      "displayName": "GCC Static Debug",
      "description": "GCC Static Debug",
      "inherits": "gcc-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE" : "Debug"
      }
    },
    {
      "name": "gcc-static-release",
      "displayName": "GCC Static Release",
      "description": "GCC Static Release",
      "inherits": "gcc-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE" : "Release"
      }
    },
    {
      "name": "gcc-shared-debug",
      "displayName": "GCC Shared Debug",
      "description": "GCC Shared Debug",
      "inherits": "gcc-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE" : "Debug",
        "BUILD_SHARED_LIBS" : true
      }
    },
    {
      "name": "gcc-shared-release",
      "displayName": "GCC Shared Release",
      "description": "GCC Shared Release",
      "inherits": "gcc-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE" : "Release",
        "BUILD_SHARED_LIBS" : true
      }
    },

    {
      "name": "clang-base",
      "hidden": true,
      "inherits": "base",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_C_COMPILER" : "clang",
        "CMAKE_CXX_COMPILER" : "clang++"
      }
    },
    {
      "name": "clang-static-debug",
      "displayName": "CLang Static Debug",
      "description": "CLang Static Debug",
      "inherits": "clang-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE" : "Debug"
      }
    },
    {
      "name": "clang-static-release",
      "displayName": "CLang Static Release",
      "description": "CLang Static Release",
      "inherits": "clang-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE" : "Release"
      }
    },
    {
      "name": "clang-shared-debug",
      "displayName": "CLang Shared Debug",
      "description": "CLang Shared Debug",
      "inherits": "clang-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE" : "Debug",
        "BUILD_SHARED_LIBS" : true
      }
    },
    {
      "name": "clang-shared-release",
      "displayName": "CLang Shared Release",
      "description": "CLang Shared Release",
      "inherits": "clang-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE" : "Release",
        "BUILD_SHARED_LIBS" : true
      }
    },

    {
      "name": "msvc-base",
      "hidden": true,
      "inherits": "base",
      "generator": "Ninja",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Visual Studio"
        }
      }
    },
    {
      "name": "msvc-static-debug",
      "displayName": "MSVC Static Debug",
      "description": "MSVC Static Debug",
      "inherits": "msvc-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE" : "Debug"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "msvc-static-release",
      "displayName": "MSVC Static Release",
      "description": "MSVC Static Release",
      "inherits": "msvc-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE" : "Release"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "msvc-shared-debug",
      "displayName": "MSVC Shared Debug",
      "description": "MSVC Shared Debug",
      "inherits": "msvc-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE" : "Debug",
        "BUILD_SHARED_LIBS" : true
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
