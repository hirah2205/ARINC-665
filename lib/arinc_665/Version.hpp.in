#ifndef ARINC_665_VERSION_HPP
#define ARINC_665_VERSION_HPP

#include <arinc_665/Arinc665.hpp>

namespace Arinc665 {

//! ARINC 665 C++ Library %Version Information.
class ARINC_665_EXPORT Version final
{
  public:
    // Deleted Constructor
    Version() = delete;

    //! Product Key.
    static constexpr auto Key{ "${PROJECT_NAME}" };

    //! Product Name.
    static constexpr auto Name{ "${PROJECT_DESCRIPTION}" };

    //! Product License.
    static constexpr auto License{ "MPL-2.0" };

    //! Product Url.
    static constexpr auto Url{ "${PROJECT_HOMEPAGE_URL}" };

    //! Version Number as String.
    static constexpr auto Number{ "${PROJECT_VERSION}" };

    //! Additional Version Information.
    static constexpr auto Addition{ "${PROJECT_VERSION_ADDITION}" };

    //! Full Version Information as String.
    static constexpr auto VersionInformation{ "${PROJECT_VERSION_FULL}" };
};

}

#endif
