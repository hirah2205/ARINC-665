#ifndef ARINC665_VERSION_HPP
#define ARINC665_VERSION_HPP

#include <arinc665/Arinc665.hpp>

#include <cstdint>

namespace Arinc665 {

//! ARINC 665 C++ Library %Version Information.
class ARINC665_EXPORT Version
{
  public:
    // delete constructors
    Version() = delete;

    //! Product Key
    static constexpr auto Key{ "${PROJECT_NAME}" };

    //! Product Name
    static constexpr auto Name{ "${PROJECT_DESCRIPTION}" };

    //! Product License
    static constexpr auto License{ "MPL-2.0" };

    //! Product Url
    static constexpr auto Url{ "${PROJECT_HOMEPAGE_URL}" };

    //! Major Version
    static constexpr uint32_t Major{ ${PROJECT_VERSION_MAJOR} +0U };
    //! Minor Version
    static constexpr uint32_t Minor{ ${PROJECT_VERSION_MINOR} +0U };
    //! Patch Version
    static constexpr uint32_t Patch{ ${PROJECT_VERSION_PATCH} +0U };

    //! Additional Version Information
    static constexpr auto Addition{ "${PROJECT_VERSION_ADDITION}" };

    //! Version Information as String.
    static constexpr auto VersionInformation{
      "${PROJECT_VERSION} (${PROJECT_VERSION_ADDITION})" };
};

}

#endif
