{
  "version": 10,

  "configurePresets": [
    {
      "name": "gcc-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "cmake-build-${presetName}",
      "installDir": "cmake-install-${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER" : "gcc",
        "CMAKE_CXX_COMPILER" : "g++",
        "CMAKE_COMPILE_WARNING_AS_ERROR" : "True"
      }
    },
    {
      "name": "gcc-static-debug",
      "displayName": "GCC Static Debug",
      "description": "GCC Static Debug",
      "inherits": "gcc-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE" : "Debug"
      }
    },
    {
      "name": "gcc-static-release",
      "displayName": "GCC Static Release",
      "description": "GCC Static Release",
      "inherits": "gcc-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE" : "Release"
      }
    },
    {
      "name": "gcc-shared-debug",
      "displayName": "GCC Shared Debug",
      "description": "GCC Shared Debug",
      "inherits": "gcc-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE" : "Debug",
        "BUILD_SHARED_LIBS" : true
      }
    },
    {
      "name": "gcc-shared-release",
      "displayName": "GCC Shared Release",
      "description": "GCC Shared Release",
      "inherits": "gcc-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE" : "Release",
        "BUILD_SHARED_LIBS" : true
      }
    }
  ],

  "buildPresets": [
    {
      "name": "gcc-static-debug",
      "displayName": "GCC Static Debug",
      "configurePreset": "gcc-static-debug"
    },
    {
      "name": "gcc-static-debug-doc",
      "displayName": "GCC Static Debug Documentation",
      "configurePreset": "gcc-static-debug",
      "targets": [ "doc" ]
    },
    {
      "name": "gcc-static-release",
      "displayName": "GCC Static Release",
      "configurePreset": "gcc-static-release"
    },
    {
      "name": "gcc-static-release-doc",
      "displayName": "GCC Static Release Documentation",
      "configurePreset": "gcc-static-release",
      "targets": [ "doc" ]
    },
    {
      "name": "gcc-shared-debug",
      "displayName": "GCC Shared Debug",
      "configurePreset": "gcc-shared-debug"
    },
    {
      "name": "gcc-shared-debug-doc",
      "displayName": "GCC Shared Debug Documentation",
      "configurePreset": "gcc-shared-debug",
      "targets": [ "doc" ]
    },
    {
      "name": "gcc-shared-release",
      "displayName": "GCC Shared Release",
      "configurePreset": "gcc-shared-release"
    },
    {
      "name": "gcc-shared-release-doc",
      "displayName": "GCC Shared Release Documentation",
      "configurePreset": "gcc-shared-release",
      "targets": [ "doc" ]
    }
  ],

  "testPresets": [
    {
      "name": "gcc-static-debug",
      "displayName": "GCC Static Debug",
      "configurePreset": "gcc-static-debug"
    },
    {
      "name": "gcc-static-release",
      "displayName": "GCC Static Release",
      "configurePreset": "gcc-static-release"
    },
    {
      "name": "gcc-shared-debug",
      "displayName": "GCC Shared Debug",
      "configurePreset": "gcc-shared-debug"
    },
    {
      "name": "gcc-shared-release",
      "displayName": "GCC Shared Release",
      "configurePreset": "gcc-shared-release"
    }
  ],

  "packagePresets": [
    {
      "name": "gcc-static-debug",
      "displayName": "GCC Static Debug",
      "configurePreset": "gcc-static-debug"
    },
    {
      "name": "gcc-static-release",
      "displayName": "GCC Static Release",
      "configurePreset": "gcc-static-release"
    },
    {
      "name": "gcc-shared-debug",
      "displayName": "GCC Shared Debug",
      "configurePreset": "gcc-shared-debug"
    },
    {
      "name": "gcc-shared-release",
      "displayName": "GCC Shared Release",
      "configurePreset": "gcc-shared-release"
    }
  ],

  "workflowPresets": [
    {
      "name": "gcc-static-debug",
      "displayName": "GCC Static Debug",
      "description": "Build and package GCC Static Debug Configuration",
      "steps": [
        {
          "type": "configure",
          "name": "gcc-static-debug"
        },
        {
          "type": "build",
          "name": "gcc-static-debug"
        },
        {
          "type": "build",
          "name": "gcc-static-debug-doc"
        },
        {
          "type": "test",
          "name": "gcc-static-debug"
        },
        {
          "type": "package",
          "name": "gcc-static-debug"
        }
      ]
    },
    {
      "name": "gcc-static-release",
      "displayName": "GCC Static Release",
      "description": "Build and package GCC Static Release Configuration",
      "steps": [
        {
          "type": "configure",
          "name": "gcc-static-release"
        },
        {
          "type": "build",
          "name": "gcc-static-release"
        },
        {
          "type": "build",
          "name": "gcc-static-release-doc"
        },
        {
          "type": "test",
          "name": "gcc-static-release"
        },
        {
          "type": "package",
          "name": "gcc-static-release"
        }
      ]
    },
    {
      "name": "gcc-shared-debug",
      "displayName": "GCC Shared Debug",
      "description": "Build and package GCC Shared Debug Configuration",
      "steps": [
        {
          "type": "configure",
          "name": "gcc-shared-debug"
        },
        {
          "type": "build",
          "name": "gcc-shared-debug"
        },
        {
          "type": "build",
          "name": "gcc-shared-debug-doc"
        },
        {
          "type": "package",
          "name": "gcc-shared-debug"
        }
      ]
    },
    {
      "name": "gcc-shared-release",
      "displayName": "GCC Shared Release",
      "description": "Build and package GCC Shared Release Configuration",
      "steps": [
        {
          "type": "configure",
          "name": "gcc-shared-release"
        },
        {
          "type": "build",
          "name": "gcc-shared-release"
        },
        {
          "type": "build",
          "name": "gcc-shared-release-doc"
        },
        {
          "type": "package",
          "name": "gcc-shared-release"
        }
      ]
    }
  ]
}
