#include <arinc665/Version.hpp>

namespace Arinc665 {

const uint32_t Version::Major{ ${PROJECT_VERSION_MAJOR}};

const uint32_t Version::Minor{ ${PROJECT_VERSION_MINOR}};

const uint32_t Version::Patch{ ${PROJECT_VERSION_PATCH}};

std::string_view Version::Addition{ "${PROJECT_VERSION_ADDITION}"};

std::string Version::version()
{
  std::string versionString{
    std::to_string( Major) + "." +
    std::to_string( Minor) + "." +
    std::to_string( Patch)};

  if (!Addition.empty())
  {
    versionString += "-" + std::string{ Addition};
  }

  return versionString;
}

}
